<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/purpal"
    android:padding="10dp"
    tools:context=".MainActivity">
    <TextView
        android:background="#c8e6c9"
        android:id="@+id/omg_output"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:gravity="end"
        android:padding="20dp"
        android:textColor="#000"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/mrcancel"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="C"
            android:textSize="25sp"
            android:padding="18dp"
            android:textColor="@color/A"
            android:background="#CE93D8"
            android:layout_margin="3dp"/>

        <Button
            android:id="@+id/mrplus"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="25sp"
            android:padding="18dp"
            android:textColor="@color/A"
            android:background="#CE93D8"
            android:layout_margin="3dp"/>

        <Button
            android:id="@+id/mrminus"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="25sp"
            android:padding="18dp"
            android:textColor="@color/A"
            android:background="#CE93D8"
            android:layout_margin="3dp"/>
        <Button
            android:id="@+id/mrmultiplication"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="*"
            android:textSize="25sp"
            android:padding="18dp"
            android:textColor="@color/A"
            android:background="#CE93D8"
            android:layout_margin="3dp"/>


        <Button
            android:id="@+id/mrdivide"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="/"
            android:textSize="25sp"
            android:padding="18dp"
            android:textColor="@color/A"
            android:background="#CE93D8"
            android:layout_margin="3dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/num1"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="25sp"
            android:padding="18dp"
            android:textColor="#fff"
            android:background="#CE93D8"
            android:layout_margin="3dp"/>
        <Button
            android:id="@+id/num2"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="25sp"
            android:padding="18dp"
            android:textColor="#fff"
            android:background="#CE93D8"
            android:layout_margin="3dp"/>

        <Button
            android:id="@+id/num3"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="25sp"
            android:padding="18dp"
            android:textColor="#fff"
            android:background="#CE93D8"
            android:layout_margin="3dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/num4"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="25sp"
            android:padding="18dp"
            android:textColor="#fff"
            android:background="#CE93D8"
            android:layout_margin="3dp"/>
        <Button
            android:id="@+id/num5"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="25sp"
            android:padding="18dp"
            android:textColor="#fff"
            android:background="#CE93D8"
            android:layout_margin="3dp"/>

        <Button
            android:id="@+id/num6"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="6"
            android:textSize="25sp"
            android:padding="18dp"
            android:textColor="#fff"
            android:background="#CE93D8"
            android:layout_margin="3dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/num7"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="7"
            android:textSize="25sp"
            android:padding="18dp"
            android:textColor="#fff"
            android:background="#CE93D8"
            android:layout_margin="3dp"/>
        <Button
            android:id="@+id/num8"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="8"
            android:textSize="25sp"
            android:padding="18dp"
            android:textColor="#fff"
            android:background="#CE93D8"
            android:layout_margin="3dp"/>

        <Button
            android:id="@+id/num9"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="9"
            android:textSize="25sp"
            android:padding="18dp"
            android:textColor="#fff"
            android:background="#CE93D8"
            android:layout_margin="3dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/num0"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="25sp"
            android:padding="18dp"
            android:textColor="#fff"
            android:background="#CE93D8"
            android:layout_margin="3dp"/>

        <Button
            android:id="@+id/mrerase"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text=">"
            android:textSize="25sp"
            android:padding="18dp"
            android:textColor="#fff"
            android:background="#CE93D8"
            android:layout_margin="3dp"/>

        <Button
            android:id="@+id/mrequal"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="="
            android:textSize="25sp"
            android:padding="18dp"
            android:textColor="@color/green"
            android:background="#CE93D8"
            android:layout_margin="3dp"/>
    </LinearLayout>

</LinearLayout>